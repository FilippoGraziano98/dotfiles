#command=~/.config/i3/i3blocks_scripts/bluetooth.sh
#interval=10


[disk-root]
label=DISK 
#instance=/
command=~/.config/i3/i3blocks_scripts/disk.sh
markup=pango
interval=30
color=#87ceeb
separator=false

[memory]
label=RAM 
command=~/.config/i3/i3blocks_scripts/memory.sh
markup=pango
min_width=RAM 10% [4.00G]
align=right
interval=5
color=#48d1cc


[cpu]
label=CPU 
command=~/.config/i3/i3blocks_scripts/cpu_usage.sh
markup=pango
min_width=CPU 10.00%
interval=5
color=#32cd32
separator=false

[temp]
command=echo "$(sensors thinkpad-isa-0000 | awk '/temp1:/ {print $2}' | sed 's/+\([0-9]*\).*/\1°C/' )"
markup=pango
interval=10
color=#98971a

